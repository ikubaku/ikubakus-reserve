# Contributor: David Runge <dvzrv@archlinux.org>

pkgbase=linux-rt
pkgver=5.9.1.18.arch1
pkgrel=2
pkgdesc='Linux RT'
arch=('x86_64')
url="https://wiki.linuxfoundation.org/realtime/start"
license=('GPL2')
makedepends=('bc' 'git' 'graphviz' 'imagemagick' 'kmod' 'libelf'
'python-sphinx' 'python-sphinx_rtd_theme' 'xmlto')
options=('!strip')
source=(
  "https://gitlab.archlinux.org/dvzrv/linux-rt/-/archive/v5.9.1.18.arch1/linux-rt-v5.9.1.18.arch1.tar.gz"
  config
  sphinx-workaround.patch
)
sha512sums=('22ae012ca96c10c542e788968a863d39e697a561f0ffcd1dcf0c605e0144e4e8a820cff813c2f4f0d2c45ab7d1bf73d5002f608a9b3cb0a079c3fd270548c533'
            'eda968b4408eabf1dc57796bb208e9088d7c475017fa5284de20b1f4fe770e8856000df36981d0eae051b7f8702355d0eed851a6a762ff3607fbfd73ab8a3855'
            '98e97155f86bbe837d43f27ec1018b5b6fdc6c372d6f7f2a0fe29da117d53979d9f9c262f886850d92002898682781029b80d4ee923633fc068f979e6c8254be')
b2sums=('ba432ba99cab7f3195b6b3ea5c0b6a40c090ed16674fc118a2c7755615e3ae1a7983cfffb65af73f488febf55e99c1e299884b399fab550bdfe25edc16e6694a'
